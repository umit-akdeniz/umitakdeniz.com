{
    "kind": "collectionType",
    "collectionName": "products",
    "info": {
        "singularName": "product",
        "pluralName": "products",
        "displayName": "Product",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "description": {
            "type": "text",
            "required": true
        },
        "price": {
            "type": "decimal",
            "required": true,
            "min": 0
        },
        "currency": {
            "type": "enumeration",
            "enum": ["USD", "EUR", "TRY"],
            "required": true,
            "default": "USD"
        },
        "category": {
            "type": "enumeration",
            "enum": ["digital", "physical", "service"],
            "required": true,
            "default": "digital"
        },
        "status": {
            "type": "enumeration",
            "enum": ["active", "inactive", "sold"],
            "required": true,
            "default": "active"
        },
        "image": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": ["images"]
        }
    }
}
