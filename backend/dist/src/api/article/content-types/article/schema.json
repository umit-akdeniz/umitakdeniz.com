{
    "kind": "collectionType",
    "collectionName": "articles",
    "info": {
        "singularName": "article",
        "pluralName": "articles",
        "displayName": "Article",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "description": {
            "type": "text",
            "required": true
        },
        "content": {
            "type": "richtext"
        },
        "category": {
            "type": "enumeration",
            "enum": ["research", "technical", "tutorial", "review"],
            "required": true,
            "default": "technical"
        },
        "status": {
            "type": "enumeration",
            "enum": ["Published", "Under Review", "In Progress", "In Preparation", "Completed"],
            "required": true,
            "default": "In Preparation"
        },
        "authors": {
            "type": "json",
            "required": true
        },
        "journal": {
            "type": "string"
        },
        "doi": {
            "type": "string"
        },
        "arxiv": {
            "type": "string"
        },
        "citations": {
            "type": "integer",
            "default": 0,
            "min": 0
        },
        "image": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": ["images"]
        }
    }
}
